<% page_title @organisation.name %>
<% page_class "organisation_homepage" %>
<%= organisation_wrapper(@organisation, class: "hcard group") do %>

  <div class="block-1">
    <div class="inner-block">
      <div>
        <%= render 'header', organisation: @organisation %>
      </div>
    </div>
  </div>

  <div class="block-2">
    <div class="inner-block">
      <% if @primary_featured_editions.any? %>
        <section class="organisation_news" id="featured-documents">
          <%= content_tag_for(:article, @primary_featured_editions.first, nil, class: "#{edition_organisation_class(@primary_featured_editions.first)} primary-first") do %>
            <div class="img">
              <%= @primary_featured_editions.first.image_tag %>
            </div>
            <div class="news_body">
              <h2><%= link_to @primary_featured_editions.first.title, public_document_path(@primary_featured_editions.first), class: "title" %></h2>
              <% unless @primary_featured_editions.first.summary.blank? %>
                <p class="summary"><%= truncate(@primary_featured_editions.first.summary, length: 150, separator: ' ') %></p>
              <% end %>
              <div class="meta">
                Posted
                <%= relative_time(@primary_featured_editions.first.published_at, class: 'published_at') %>
              </div>
              <div class="document-type"><%= @primary_featured_editions.first.format_name.capitalize %></div>
            </div>
          <% end %>

          <div class="primary-secondary">
            <% @primary_featured_editions.to_a.from(1).each do |edition| %>
              <%= content_tag_for(:article, edition, nil, class: edition_organisation_class(edition)) do %>
                <div class="img">
                  <%= edition.image_tag %>
                </div>
                <div class="news_body">
                  <h2><%= link_to edition.title, public_document_path(edition), class: "title" %></h2>
                  <div class="meta">
                    Posted
                    <%= relative_time(edition.published_at, class: 'published_at') %>
                  </div>
                  <div class="document-type"><%= edition.format_name.capitalize %></div>
                </div>
              <% end %>
            <% end %>
        </div>
        </section>
      <% end %>
    </div>
  </div>

  <div class="block-3">
    <div class="inner-block">
      <% if @secondary_featured_editions.any? %>
      <ul class="secondary-featured <%= (@secondary_featured_editions.length == 1 ? 'singular' : '') %>">
        <% @secondary_featured_editions.each do |document| %>
          <%= content_tag_for :li, document, class: edition_organisation_class(document) do %>
            <div class="feature-inner">
                <div class="img">
                  <%= document.image_tag %>
                </div>
              <h2><%= link_to document.title, public_document_path(document), class: "title" %></h2>
              <div class="summary"><%= document.summary %></div>
              <div class="metadata published_or_updated">
                <%= published_or_updated(document).capitalize %>
                <%= relative_time(document.published_at, class: 'published_at') %>
                <span class="document_type"><%= document.format_name.capitalize %></span>
              </div>
            </div>
          <% end %>
        <% end %>
      </ul>
    <% end %>
    </div>
  </div>

  <div class="block-4">
    <div class="inner-block">
      <section id="recently_updated" class="latest_documents">
          <h1 class="label">Latest</h1>
        <%= render(partial: "shared/recently_updated",
         locals: {recently_updated: @recently_updated}
        ) if @recently_updated.present? %>
      </section>
    </div>
  </div>

  <div class="block-5">
    <div class="inner-block">
      <h1 class="label">What we do</h1>
      <p class="description"><%= @organisation.description %></p>
      <p class="parent_organisations"><%= organisation_display_name_and_parental_relationship(@organisation) %></p>
      <p><%= organisation_navigation_link_to "Read more about #{@organisation.acronym}", about_organisation_path(@organisation) %></p>
      <p>
      <% if @organisation.department? %>
        <%= organisation_navigation_link_to 'See all of our agencies & partners', agencies_and_partners_organisation_path(@organisation) %>
      <% end %>
      </p>
    </div>
  </div>

  <div class="block-6">
    <div class="inner-block">
      <% if @topics.any? %>
        <section id="topics">
          <h1 class="label">We focus on these topics</h1>
          <%= render partial: "topics/list_description", locals: {topics: @topics, organisation: @organisation} %>
        </section>
      <% end %>
    </div>
  </div>

  <div class="block-7">
    <div class="inner-block">
      <% if @policies.any? %>
        <section id="policies" class="simple_list">
          <h1 class="label">Our policies</h1>
          <%= render partial: "policies/list_description", locals: {policies: @policies} %>
          <p class="see-all">
            <%= link_to 'See all of our policies', policies_filter_path(@organisation) %>
          </p>
        </section>
      <% end %>
    </div>
  </div>

  <div class="block-8">
    <div class="inner-block">
      <% if @publications.any? %>
        <section id="publications" class="simple_list">
          <h1 class="label">Our publications</h1>
          <%= render partial: "publications/list_description", locals: {publications: @publications} %>
          <p class="see-all">
            <%= link_to 'See all of our publications', publications_filter_path(@organisation) %>
          </p>
        </section>
      <% end %>
    </div>
  </div>


  <div class="block-9">
    <div class="inner-block">
        <% if @organisation.department? %>
        <h1 class="label">Our Announcements</h1>
        <p>
        <%= link_to "See all of our announcements", announcements_filter_path(@organisation) %>
        </p>
        <% end %>
    </div>
  </div>


  <div class="block-9">
    <div class="inner-block">
      <section id="who">
        <% if @ministers.any? %>
          <section id="ministers">
            <h1 class="label">Our ministers</h1>
            <ul>
              <% @ministers.each do |minister| %>
                <%= content_tag_for(:li, minister) do %>
                  <h1 class="visuallyhidden">Minister</h1>
                  <div class="image_holder">
                    <%= minister.current_person_image %>
                  </div>
                  <h3 class="current-appointee"><%= minister.current_person_link %></h3>
                  <p class="role"><%= minister.link %></p>
                <% end %>
              <% end %>
            </ul>
          </section>
        <% end %>


        <% if @civil_servants.any? %>
          <section id="management">
            <h1 class="label">Our management</h1>
            <ul>
                <%= content_tag_for(:li, @civil_servants.first) do %>
                  <h1 class="visuallyhidden">Board member</h1>
                  <div class="image_holder">
                    <%= @civil_servants.first.current_person_image %>
                  </div>
                  <h3 class="current-appointee"><%= @civil_servants.first.current_person_link %></h3>
                  <p class="role"><%= @civil_servants.first.link %></p>
                <% end %>
            </ul>

            <ul class="management-secondary">
              <% @civil_servants.to_a.from(1).each do |civil_servant| %>
                <%= content_tag_for(:li, civil_servant) do %>
                  <h1 class="visuallyhidden">Board member</h1>
                  <h3 class="current-appointee"><%= civil_servant.current_person_link %></h3>
                  <p class="role"><%= civil_servant.link %></p>
                <% end %>
              <% end %>
            </ul>

          </section>
        <% end %>


        <% if @organisation.military_roles.any? %>
          <section id="military">
            <h1 class="label">Military</h1>
            <% if @top_military_role %>
              <ul>
                <%= content_tag_for(:li, @top_military_role) do %>
                  <div class="image_holder">
                    <%= @top_military_role.current_person_image %>
                  </div>
                  <h3 class="current-appointee"><%= @top_military_role.current_person_link %></h3>
                  <p class="role"><%= @top_military_role.link %></p>
                <% end %>
              </ul>
            <% end %>
            <p class="view_all"><%= link_to "View all chiefs of staff", chiefs_of_staff_organisation_path(@organisation) %></p>
          </section>
        <% end %>
      </section>
    </div>
  </div>

  <div class="block-10">
    <div class="inner-block">
      <div class="social-media">
        <%= render 'social_media_accounts', organisation: @organisation %>
      </div>
    </div>
  </div>

  <div class="block-11">
    <div class="inner-block">
      <%= render 'navigation', organisation: @organisation %>
    </div>
  </div>

<% end %>
